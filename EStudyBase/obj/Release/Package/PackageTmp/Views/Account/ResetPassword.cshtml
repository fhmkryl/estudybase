@{
    ViewBag.Title = "Şifre Sıfırlandı";
}

@if (ViewBag.Result != null)
{
    if (!ViewBag.Result)
    {
        if (!string.IsNullOrWhiteSpace(ViewBag.ResultMessage))
        {
            <div class="alert alert-error">
                @MvcHtmlString.Create(ViewBag.ResultMessage)   
            </div>
        }
    }
    else
    {
        if (!string.IsNullOrWhiteSpace(ViewBag.ResultMessage))
        {
            <div class="alert alert-success">
                @MvcHtmlString.Create(ViewBag.ResultMessage) 
                @Html.ActionLink("giriş","Login","Account",null,new {style="margin-right:30px;margin-top:7px;display:inline-block;font-size:15px;"}) 
            </div>
        }
    }
}
