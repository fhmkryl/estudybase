@model EStudyBase.ViewModels.EmailBoxViewModel

@if (Model != null)
{
    <div id="divEmailContent">
        <table class="table table-striped table-bordered jquery-data-table">
            <tr>
                <td><b>Kimden</b>
                </td>
                <td>
                    @if (string.IsNullOrWhiteSpace(Model.FromUserName))
                    {
                        <div>Sistem</div>
                    }
                    else
                    {
                        @Model.FromUserName
                    }
                </td>
            </tr>
            <tr>
                <td><b>Kime</b>
                </td>
                <td>
                    @Model.ToUserName
                </td>
            </tr>
            <tr>
                <td><b>Gönderim Tarihi</b>
                </td>
                <td>
                    @Model.CreateDate
                </td>
            </tr>
            <tr>
                <td><b>Konu</b>
                </td>
                <td>
                    @Model.Header
                </td>
            </tr>
            <tr>
                <td><b>Mesaj</b>
                </td>
                <td>
                    @MvcHtmlString.Create(Model.Content)
                </td>
            </tr>
        </table>
    </div>
}