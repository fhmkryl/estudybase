<div id="divEmailOperations" class="yeniicerikekle">
    @if (ViewBag.ToUserId > 0)
    {
        Html.RenderAction("EmailToUser", "Email", new { userId = ViewBag.ToUserId });
    }
    @if (ViewBag.EmailId > 0)
    {
        Html.RenderAction("GetEmailContent", "Email", new { emailId = ViewBag.EmailId });
    }
